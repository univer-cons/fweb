<body>
  <div class="sidebar">
    <h2>Admin</h2>
    <div class="menu">
      <a href="#" class="active" data-section="users">👤 <span>Kullanıcılar</span></a>
      <a href="#" data-section="files">📁 <span>Dosyalar</span></a>
      <a href="#" data-section="messages">💬 <span>Mesajlar</span></a>
    </div>
    <button class="logout-btn" id="logoutBtn">Çıkış Yap</button>
  </div>

  <div class="content">
    <div id="users" class="section active">
      <h1>Kullanıcılar</h1>
      <div class="card"><h3>Yükleniyor...</h3></div>
    </div>

    <div id="files" class="section">
      <h1>Dosyalar</h1>
      <div class="card"><h3>Yükleniyor...</h3></div>
    </div>

    <div id="messages" class="section">
      <h1>Mesajlar</h1>
      <div class="card"><h3>Yükleniyor...</h3></div>
    </div>
  </div>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/11.0.1/firebase-app.js";
    import { getAuth, signOut } from "https://www.gstatic.com/firebasejs/11.0.1/firebase-auth.js";
    import { getFirestore, collection, getDocs } from "https://www.gstatic.com/firebasejs/11.0.1/firebase-firestore.js";

    // 🔧 Firebase ayarlarını buraya ekle
    const firebaseConfig = {
      apiKey: "AIzaSyDMGZ1XtGWi4Cbo5nhhB2eQkcXTVU3aYk0",
      authDomain: "ahmet-consulting.firebaseapp.com",
      projectId: "ahmet-consulting",
      storageBucket: "ahmet-consulting.appspot.com",
      messagingSenderId: "253579961791",
      appId: "1:253579961791:web:738c1277d865069a22fdc5",
      measurementId: "G-KHQYBLGMN5"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getFirestore(app);

    // 🔹 Menü geçişleri
    const menuLinks = document.querySelectorAll('.menu a');
    const sections = document.querySelectorAll('.section');

    menuLinks.forEach(link => {
      link.addEventListener('click', e => {
        e.preventDefault();
        menuLinks.forEach(a => a.classList.remove('active'));
        link.classList.add('active');
        sections.forEach(sec => sec.classList.remove('active'));
        document.getElementById(link.dataset.section).classList.add('active');
      });
    });

    // 🔹 Örnek veri çekme (sen Firestore'dan dolduracaksın)
    const usersDiv = document.getElementById('users');
    async function loadUsers() {
      usersDiv.innerHTML = '<h1>Kullanıcılar</h1>';
      const usersCol = collection(db, "users");
      const snapshot = await getDocs(usersCol);
      snapshot.forEach(doc => {
        const data = doc.data();
        usersDiv.innerHTML += `
          <div class="card">
            <h3>${data.email}</h3>
            <p>Rol: ${data.role}</p>
          </div>`;
      });
    }
    loadUsers();

    // 🔹 Çıkış butonu
    document.getElementById("logoutBtn").addEventListener("click", async () => {
      await signOut(auth);
      window.location.href = "index.html";
    });
  </script>
</body>
